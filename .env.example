# =============================================================================
# Environment Variables Configuration
# =============================================================================

# Option 1: Use .env file (for local development)
# Copy this file to .env and fill in your actual values
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_CLINIC_NAME=Wisata Dental Care
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_API_URL=http://localhost:3001
VITE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# Option 2: Set Environment Variables (for production/CI/CD)
# =============================================================================

# Unix/Linux/macOS:
export VITE_GOOGLE_CLIENT_ID="your_google_client_id"
export VITE_CLINIC_NAME="Wisata Dental Care"
export VITE_FIREBASE_API_KEY="your_firebase_api_key"
export VITE_FIREBASE_AUTH_DOMAIN="your_project.firebaseapp.com"
export VITE_FIREBASE_PROJECT_ID="your_project_id"
export VITE_FIREBASE_STORAGE_BUCKET="your_project.appspot.com"
export VITE_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
export VITE_FIREBASE_APP_ID="your_firebase_app_id"
export VITE_API_URL="https://your-api-domain.com"
export VITE_CLIENT_SECRET="your_google_client_secret"

# Windows PowerShell:
$env:VITE_GOOGLE_CLIENT_ID="your_google_client_id"
$env:VITE_CLINIC_NAME="Wisata Dental Care"
$env:VITE_FIREBASE_API_KEY="your_firebase_api_key"
$env:VITE_FIREBASE_AUTH_DOMAIN="your_project.firebaseapp.com"
$env:VITE_FIREBASE_PROJECT_ID="your_project_id"
$env:VITE_FIREBASE_STORAGE_BUCKET="your_project.appspot.com"
$env:VITE_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
$env:VITE_FIREBASE_APP_ID="your_firebase_app_id"
$env:VITE_API_URL="https://your-api-domain.com"
$env:VITE_CLIENT_SECRET="your_google_client_secret"

# Windows Command Prompt:
set VITE_GOOGLE_CLIENT_ID=your_google_client_id
set VITE_CLINIC_NAME=Wisata Dental Care
set VITE_FIREBASE_API_KEY=your_firebase_api_key
set VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
set VITE_FIREBASE_PROJECT_ID=your_project_id
set VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
set VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
set VITE_FIREBASE_APP_ID=your_firebase_app_id
set VITE_API_URL=https://your-api-domain.com
set VITE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# Important Notes
# =============================================================================

# • VITE_ prefix is required for client-side variables
# • Never commit actual values to version control
# • Use different values for development, staging, production
# • For CI/CD, use your platform's secret management
